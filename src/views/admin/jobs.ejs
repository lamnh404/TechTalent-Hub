<%
    // Mock Data cho Admin Job Management
    if (typeof allJobs === 'undefined') {
        var allJobs = [
            { id: 1, title: "Senior React Developer", company: "Google Inc.", postedBy: "hr@google.com", postedDate: "2023-10-25", status: "Active", reports: 0 },
            { id: 2, title: "Spam Job Posting", company: "Fake Company", postedBy: "spammer@gmail.com", postedDate: "2023-10-26", status: "Active", reports: 5 },
            { id: 3, title: "Backend Node.js Engineer", company: "Netflix", postedBy: "tech@netflix.com", postedDate: "2023-10-20", status: "Closed", reports: 0 },
            { id: 4, title: "Marketing Intern", company: "Startup ABC", postedBy: "founder@abc.com", postedDate: "2023-10-28", status: "Pending", reports: 1 },
            { id: 5, title: "Data Analyst", company: "Shopee", postedBy: "recruitment@shopee.com", postedDate: "2023-10-15", status: "Banned", reports: 12 }
        ];
    }
%>

<%- include('../partials/header', { title: 'Jobs Management' }) %>

<body class="dashboard-page">
    <div class="dashboard-wrapper">
        <%- include('../partials/navbar', { activePage: 'admin-jobs' }) %>

        <main class="main-content">
            <header class="dashboard-header">
                <h5 class="mb-0 font-weight-bold text-dark">Job Management</h5>
                <div class="d-flex align-items-center">
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-decoration-none text-dark dropdown-toggle" data-toggle="dropdown">
                            <img src="/images/admin-avatar.png" onerror="this.src='/images/default-avatar.png'" class="rounded-circle mr-2 shadow-sm" width="35" height="35" style="border: 2px solid #fff;">
                            <span class="font-weight-bold small mr-1">Administrator</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right border-0 shadow-lg">
                            <a class="dropdown-item text-danger" href="/auth/logout">Logout</a>
                        </div>
                    </div>
                </div>
            </header>

            <div class="p-4">
                
                <div class="card border-0 shadow-sm rounded-lg mb-4">
                    <div class="card-body p-3">
                        <div class="row align-items-center">
                            <div class="col-md-5 mb-2 mb-md-0">
                                <div class="position-relative">
                                    <i class="fas fa-search position-absolute text-muted" style="left: 15px; top: 50%; transform: translateY(-50%);"></i>
                                    <input type="text" class="form-control-modern pl-5" placeholder="Search by title, company..." style="height: 45px;">
                                </div>
                            </div>
                            <div class="col-md-3 mb-2 mb-md-0">
                                <select class="form-control-modern" style="height: 45px; padding-left: 15px;">
                                    <option value="">All Status</option>
                                    <option value="Active">Active</option>
                                    <option value="Pending">Pending Review</option>
                                    <option value="Reported">Reported</option>
                                </select>
                            </div>
                            <div class="col-md-4 text-right">
                                <div class="btn-group shadow-sm">
                                    <button class="btn btn-light text-dark font-weight-bold active">All</button>
                                    <button class="btn btn-light text-danger font-weight-bold"><i class="fas fa-flag mr-1"></i> Reported (18)</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm rounded-lg overflow-hidden">
                    <div class="table-responsive">
                        <table class="table custom-table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="pl-4 py-3 border-top-0">Job Info</th>
                                    <th class="py-3 border-top-0">Posted By</th>
                                    <th class="py-3 border-top-0">Date</th>
                                    <th class="py-3 border-top-0 text-center">Status</th>
                                    <th class="py-3 border-top-0 text-center">Reports</th>
                                    <th class="py-3 border-top-0 text-right pr-4">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (allJobs && allJobs.length > 0) { %>
                                    <% allJobs.forEach(job => { %>
                                        <tr>
                                            <td class="pl-4 align-middle">
                                                <div class="d-flex flex-column">
                                                    <span class="font-weight-bold text-dark text-truncate" style="max-width: 250px;"><%= job.title %></span>
                                                    <small class="text-muted"><i class="far fa-building mr-1"></i> <%= job.company %></small>
                                                </div>
                                            </td>
                                            <td class="align-middle text-muted">
                                                <%= job.postedBy %>
                                            </td>
                                            <td class="align-middle text-muted">
                                                <%= new Date(job.postedDate).toLocaleDateString() %>
                                            </td>
                                            <td class="align-middle text-center">
                                                <% 
                                                    let statusClass = 'badge-soft-secondary';
                                                    if (job.status === 'Active') statusClass = 'badge-soft-success';
                                                    else if (job.status === 'Banned') statusClass = 'badge-soft-danger';
                                                    else if (job.status === 'Pending') statusClass = 'badge-soft-warning';
                                                %>
                                                <span class="badge <%= statusClass %> px-3 py-2"><%= job.status %></span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <% if (job.reports > 0) { %>
                                                    <span class="badge badge-danger rounded-pill px-2"><%= job.reports %></span>
                                                <% } else { %>
                                                    <span class="text-muted">-</span>
                                                <% } %>
                                            </td>
                                            <td class="align-middle text-right pr-4">
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-light shadow-sm" type="button" data-toggle="dropdown">
                                                        <i class="fas fa-ellipsis-v text-muted"></i>
                                                    </button>
                                                    <div class="dropdown-menu dropdown-menu-right border-0 shadow">
                                                        <a class="dropdown-item" href="/jobs/<%= job.id %>" target="_blank"><i class="fas fa-external-link-alt mr-2 text-primary"></i> View Job</a>
                                                        <div class="dropdown-divider"></div>
                                                        <% if (job.status !== 'Banned') { %>
                                                            <a class="dropdown-item text-danger" href="#"><i class="fas fa-ban mr-2"></i> Remove Job</a>
                                                        <% } else { %>
                                                            <a class="dropdown-item text-success" href="#"><i class="fas fa-check mr-2"></i> Restore Job</a>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr><td colspan="6" class="text-center py-5 text-muted">No jobs found.</td></tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="card-footer bg-white border-0 py-3">
                        <nav>
                            <ul class="pagination justify-content-end mb-0">
                                <li class="page-item disabled"><a class="page-link border-0 text-muted" href="#">Previous</a></li>
                                <li class="page-item active"><a class="page-link border-0 rounded-circle shadow-sm mx-1" href="#">1</a></li>
                                <li class="page-item"><a class="page-link border-0 rounded-circle bg-transparent mx-1" href="#">2</a></li>
                                <li class="page-item"><a class="page-link border-0 text-muted" href="#">Next</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <%- include('../partials/footer') %>
</body>