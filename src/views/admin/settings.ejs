<%- include('../partials/header', { title: 'System Settings' }) %>

<body class="dashboard-page">
    <div class="dashboard-wrapper">
        <%- include('../partials/navbar', { activePage: 'settings' }) %>

        <main class="main-content">
            <header class="dashboard-header">
                <h5 class="mb-0 font-weight-bold text-dark">Settings</h5>
            </header>

            <div class="p-4">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        
                        <div class="card border-0 shadow-sm rounded-lg mb-4">
                            <div class="card-header bg-white border-bottom-0 pt-4 px-4">
                                <h5 class="font-weight-bold text-primary mb-0"><i class="fas fa-cogs mr-2"></i> General Configuration</h5>
                            </div>
                            <div class="card-body p-4">
                                <form>
                                    <div class="form-group mb-3">
                                        <label class="font-weight-bold small text-dark">Site Name</label>
                                        <div class="input-wrapper">
                                            <i class="fas fa-globe input-icon"></i>
                                            <input type="text" class="form-control-modern" value="<%= config.siteName %>">
                                        </div>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label class="font-weight-bold small text-dark">Support Email</label>
                                        <div class="input-wrapper">
                                            <i class="fas fa-envelope input-icon"></i>
                                            <input type="email" class="form-control-modern" value="<%= config.supportEmail %>">
                                        </div>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label class="font-weight-bold small text-dark">Items Per Page (Pagination)</label>
                                        <div class="input-wrapper">
                                            <i class="fas fa-list-ol input-icon"></i>
                                            <input type="number" class="form-control-modern" value="<%= config.itemsPerPage %>">
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm rounded-lg mb-4">
                            <div class="card-header bg-white border-bottom-0 pt-4 px-4">
                                <h5 class="font-weight-bold text-danger mb-0"><i class="fas fa-shield-alt mr-2"></i> Security & Access</h5>
                            </div>
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
                                    <div>
                                        <h6 class="font-weight-bold text-dark mb-1">Maintenance Mode</h6>
                                        <p class="text-muted small mb-0">Disable access for all users except admins.</p>
                                    </div>
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" id="maintenanceSwitch" <%= config.maintenanceMode ? 'checked' : '' %>>
                                        <label class="custom-control-label" for="maintenanceSwitch"></label>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="font-weight-bold text-dark mb-1">Allow New Registrations</h6>
                                        <p class="text-muted small mb-0">Enable or disable new user sign-ups.</p>
                                    </div>
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" id="regSwitch" <%= config.allowRegistration ? 'checked' : '' %>>
                                        <label class="custom-control-label" for="regSwitch"></label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="text-right">
                            <button class="btn btn-light mr-2 font-weight-bold text-muted">Cancel</button>
                            <button class="btn btn-primary-modern px-5 shadow-md font-weight-bold">
                                <i class="fas fa-save mr-2"></i> Save Settings
                            </button>
                        </div>

                    </div>
                </div>
            </div>
        </main>
    </div>
    <%- include('../partials/footer') %>