<%- include('../partials/header', { title: 'Create Job' }) %>

    <body class="auth-layout-page">
        <section class="auth-hero">

            <%- include('../partials/navbar') %>

                <div class="sky-arcs"></div>

                <div class="auth-content-wrapper" style="padding-top: 100px;">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-md-8 col-lg-8">
                                <div class="card auth-card">
                                    <div class="card-body p-4 p-md-5">

                                        <div class="text-center mb-4">
                                            <h3 class="mb-1 font-weight-bold text-dark">Create a New Job</h3>
                                            <p class="text-muted small">Post a new job listing to find the best talent.
                                            </p>
                                        </div>

                                        <% if (typeof error !=='undefined' && error) { %>
                                            <div class="alert alert-danger auth-alert shadow-sm" role="alert">
                                                <i class="fas fa-exclamation-circle mr-2"></i>
                                                <%= error %>
                                            </div>
                                            <% } %>

                                                <form action="/company/jobs/create" method="POST" id="createJobForm">

                                                    <div class="form-group mb-3">
                                                        <label for="jobTitle"
                                                            class="font-weight-bold small text-muted text-uppercase">Job
                                                            Title</label>
                                                        <div class="input-wrapper">
                                                            <i class="fas fa-briefcase input-icon"></i>
                                                            <input type="text" class="form-control-modern" id="jobTitle"
                                                                name="jobTitle"
                                                                placeholder="e.g. Senior Software Engineer" required>
                                                        </div>
                                                    </div>

                                                    <div class="form-group mb-3">
                                                        <label for="jobDescription"
                                                            class="font-weight-bold small text-muted text-uppercase">Job
                                                            Description</label>
                                                        <div class="input-wrapper">
                                                            <textarea class="form-control-modern" id="jobDescription"
                                                                name="jobDescription" rows="5"
                                                                placeholder="Describe the role, responsibilities, and requirements..."
                                                                required
                                                                style="padding-left: 15px; height: auto;"></textarea>
                                                        </div>
                                                    </div>

                                                    <div class="form-row">
                                                        <div class="form-group col-md-6 mb-3">
                                                            <label for="salaryMin"
                                                                class="font-weight-bold small text-muted text-uppercase">Min
                                                                Salary</label>
                                                            <div class="input-wrapper">
                                                                <i class="fas fa-dollar-sign input-icon"></i>
                                                                <input type="number" class="form-control-modern"
                                                                    id="salaryMin" name="salaryMin"
                                                                    placeholder="e.g. 50000" required>
                                                            </div>
                                                        </div>
                                                        <div class="form-group col-md-6 mb-3">
                                                            <label for="salaryMax"
                                                                class="font-weight-bold small text-muted text-uppercase">Max
                                                                Salary</label>
                                                            <div class="input-wrapper">
                                                                <i class="fas fa-dollar-sign input-icon"></i>
                                                                <input type="number" class="form-control-modern"
                                                                    id="salaryMax" name="salaryMax"
                                                                    placeholder="e.g. 80000" required>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="form-group mb-3">
                                                        <label for="location"
                                                            class="font-weight-bold small text-muted text-uppercase">Location</label>
                                                        <div class="input-wrapper">
                                                            <i class="fas fa-map-marker-alt input-icon"></i>
                                                            <input type="text" class="form-control-modern" id="location"
                                                                name="location"
                                                                placeholder="e.g. New York, NY or Remote" required>
                                                        </div>
                                                    </div>

                                                    <div class="form-group mb-4">
                                                        <label for="employmentType"
                                                            class="font-weight-bold small text-muted text-uppercase">Employment
                                                            Type</label>
                                                        <div class="input-wrapper">
                                                            <i class="fas fa-clock input-icon"></i>
                                                            <select class="form-control-modern" id="employmentType"
                                                                name="employmentType" required>
                                                                <option value="" disabled selected>Select Employment
                                                                    Type</option>
                                                                <option value="Full-time">Full-time</option>
                                                                <option value="Part-time">Part-time</option>
                                                                <option value="Contract">Contract</option>
                                                                <option value="Internship">Internship</option>
                                                            </select>
                                                        </div>
                                                    </div>

                                                    <button type="submit" class="btn btn-cta-dark btn-block shadow">
                                                        Post Job <i class="fas fa-paper-plane ml-2"></i>
                                                    </button>
                                                </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <%- include('../partials/footer') %>
        </section>
    </body>