<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/header', { title: 'Job Search Results' }) %>
</head>

<body>
    <%- include('../partials/navbar') %>

        <section class="section bg-light">
            <div class="container">
                <div class="row mb-4 align-items-center">
                    <div class="col-md-8">
                        <h2 class="section-title mb-0">
                            <% if (keyword) { %>
                                Search Results for "<span class="text-primary">
                                    <%= keyword %>
                                </span>"
                                <% } else { %>
                                    All Jobs
                                    <% } %>
                        </h2>
                        <p class="text-muted">
                            <%= jobs.length %> jobs found
                        </p>
                    </div>
                    <div class="col-md-4">
                        <form action="/jobs" method="GET" class="d-flex">
                            <input type="text" name="q" class="form-control mr-2" placeholder="Search..."
                                value="<%= keyword %>">
                            <button type="submit" class="btn btn-primary">Search</button>
                        </form>
                    </div>
                </div>

                <div class="row">
                    <% if (jobs.length> 0) { %>
                        <% jobs.forEach(job=> { %>
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="job-card">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <% if (job.LogoURL) { %>
                                            <img src="<%= job.LogoURL %>" alt="<%= job.CompanyName %>"
                                                class="company-logo">
                                            <% } else { %>
                                                <div class="company-logo-placeholder"><i class="far fa-building"></i>
                                                </div>
                                                <% } %>
                                                    <button class="btn btn-sm btn-link text-muted"><i
                                                            class="far fa-heart"></i></button>
                                    </div>
                                    <a href="/jobs/<%= job.JobID %>" class="job-title stretched-link">
                                        <%= job.JobTitle %>
                                    </a>
                                    <p class="company-name"><i class="far fa-building mr-1"></i>
                                        <%= job.CompanyName %>
                                    </p>
                                    <div class="job-tags mb-2">
                                        <span class="tag tag-fulltime">
                                            <%= job.EmploymentType %>
                                        </span>
                                        <span class="tag tag-location"><i class="fas fa-map-marker-alt mr-1"></i>
                                            <%= job.Location %>
                                        </span>
                                    </div>
                                    <div class="job-salary mb-2">
                                        <i class="fas fa-money-bill-wave text-success mr-1"></i>
                                        $<%= job.SalaryMin ? job.SalaryMin.toLocaleString() : 'N/A' %> - $<%=
                                                job.SalaryMax ? job.SalaryMax.toLocaleString() : 'N/A' %>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <small class="text-muted">Posted <%= new
                                                Date(job.PostedDate).toLocaleDateString() %></small>
                                        <div class="job-metrics small text-muted">
                                            <span class="mr-2" title="Views"><i class="far fa-eye mr-1"></i>
                                                <%= job.ViewCount || 0 %>
                                            </span>
                                            <span title="Applicants"><i class="fas fa-user-friends mr-1"></i>
                                                <%= job.AppliedCount || 0 %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <div class="col-12 text-center py-5">
                                        <div class="mb-3">
                                            <i class="fas fa-search fa-3x text-muted opacity-50"></i>
                                        </div>
                                        <h3>No jobs found</h3>
                                        <p class="text-muted">Try adjusting your search keywords or browse all jobs.</p>
                                        <a href="/jobs" class="btn btn-outline-primary mt-3">View All Jobs</a>
                                    </div>
                                    <% } %>
                </div>
            </div>
        </section>

        <%- include('../partials/footer') %>
</body>

</html>