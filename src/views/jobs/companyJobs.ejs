<%- include('../partials/header') %>

    <body>
        <%- include('../partials/navbar') %>

            <div class="main-content" style="padding-top: 80px;">
                <div class="container mb-5">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="font-weight-bold">Manage Jobs</h2>
                        <a href="/company/jobs/create" class="btn btn-primary shadow-sm">
                            <i class="fas fa-plus mr-2"></i> Post New Job
                        </a>
                    </div>

                    <div class="card shadow-sm border-0">
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="bg-light">
                                        <tr>
                                            <th class="border-top-0 py-3 px-4">Job Title</th>
                                            <th class="border-top-0 py-3">Location</th>
                                            <th class="border-top-0 py-3">Type</th>
                                            <th class="border-top-0 py-3">Posted Date</th>
                                            <th class="border-top-0 py-3 text-right px-4">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (jobs && jobs.length> 0) { %>
                                            <% jobs.forEach(job=> { %>
                                                <tr>
                                                    <td class="py-3 px-4">
                                                        <a href="/jobs/<%= job.JobID %>"
                                                            class="font-weight-bold text-dark text-decoration-none">
                                                            <%= job.JobTitle %>
                                                        </a>
                                                    </td>
                                                    <td class="py-3">
                                                        <%= job.Location %>
                                                    </td>
                                                    <td class="py-3"><span
                                                            class="badge badge-pill badge-info px-3 py-2">
                                                            <%= job.EmploymentType %>
                                                        </span></td>
                                                    <td class="py-3">
                                                        <%= new Date(job.PostedDate).toLocaleDateString() %>
                                                    </td>
                                                    <td class="py-3 text-right px-4">
                                                        <a href="/jobs/<%= job.JobID %>"
                                                            class="btn btn-sm btn-outline-secondary mr-2" title="View">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <button class="btn btn-sm btn-outline-primary mr-2" title="Edit"
                                                            disabled>
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-outline-danger" title="Delete"
                                                            disabled>
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="5" class="text-center py-5">
                                                                <div class="text-muted mb-3">
                                                                    <i
                                                                        class="fas fa-briefcase fa-3x mb-3 text-gray-300"></i>
                                                                    <p class="mb-0">No jobs posted yet.</p>
                                                                </div>
                                                                <a href="/company/jobs/create"
                                                                    class="btn btn-primary btn-sm">Post your first
                                                                    job</a>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

    </body>
    <footer>
        <%- include('../partials/footer') %>
    </footer>

    </html>