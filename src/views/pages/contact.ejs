<%- include('../partials/header', { title: 'Contact Us' }) %>
<body>
    <%- include('../partials/navbar') %>

    <section class="page-hero">
        <div class="container">
            <h1 class="page-title">Get in Touch</h1>
            <p class="text-muted lead">Have questions? We'd love to hear from you.</p>
        </div>
    </section>

    <section class="section bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 mb-4">
                    <div class="content-card h-100">
                        <div class="d-flex align-items-start mb-4">
                            <div class="icon-box-circle mr-3" style="width: 50px; height: 50px; font-size: 1.2rem;">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div>
                                <h5 class="font-weight-bold">Office Address</h5>
                                <p class="small mb-0">268 Ly Thuong Kiet, Dist 10<br>Ho Chi Minh City, Vietnam</p>
                            </div>
                        </div>
                        
                        <div class="d-flex align-items-start mb-4">
                            <div class="icon-box-circle mr-3" style="width: 50px; height: 50px; font-size: 1.2rem;">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div>
                                <h5 class="font-weight-bold">Email Us</h5>
                                <p class="small mb-0">support@techtalenthub.com<br>partners@techtalenthub.com</p>
                            </div>
                        </div>

                        <div class="d-flex align-items-start">
                            <div class="icon-box-circle mr-3" style="width: 50px; height: 50px; font-size: 1.2rem;">
                                <i class="fas fa-phone"></i>
                            </div>
                            <div>
                                <h5 class="font-weight-bold">Call Us</h5>
                                <p class="small mb-0">(+84) 28 3864 7256<br>Mon-Fri, 9am - 6pm</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="content-card">
                        <h3 class="mt-0 mb-4">Send us a message</h3>
                        <form>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="small font-weight-bold">Your Name</label>
                                    <input type="text" class="form-control" style="height: 50px; border-radius: 10px;">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="small font-weight-bold">Email Address</label>
                                    <input type="email" class="form-control" style="height: 50px; border-radius: 10px;">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="small font-weight-bold">Subject</label>
                                <input type="text" class="form-control" style="height: 50px; border-radius: 10px;">
                            </div>
                            <div class="mb-4">
                                <label class="small font-weight-bold">Message</label>
                                <textarea class="form-control" rows="5" style="border-radius: 10px;"></textarea>
                            </div>
                            <button type="button" class="btn btn-primary px-5 py-3 rounded-pill font-weight-bold">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>
</body>
</html>