<%- include('../partials/header', { title: title || 'Companies' }) %>

<body class="animate-fade-in">
    <%- include('../partials/navbar', { activePage: 'companies' }) %>

    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="mb-0 font-weight-bold">Companies</h3>
            <form class="form-inline" method="GET" action="/companies">
                <input type="text" name="q" class="form-control form-control-sm mr-2" placeholder="Search companies" value="<%= query || '' %>">
                <button class="btn btn-sm btn-primary">Search</button>
            </form>
        </div>

        <% if (companies && companies.length > 0) { %>
            <div class="row">
                <% companies.forEach(c => { %>
                    <div class="col-md-4 mb-3">
                        <div class="card border-0 shadow-sm rounded-lg h-100 p-3">
                            <div class="d-flex align-items-center">
                                <img src="<%= c.LogoURL || '/images/default-company.png' %>" style="width:60px;height:60px;object-fit:contain;" class="mr-3">
                                <div class="flex-grow-1">
                                    <h6 class="mb-0 font-weight-bold"><a href="/companies/<%= c.CompanyID %>" class="text-dark"><%= c.CompanyName %></a></h6>
                                    <small class="text-muted"><%= c.Industry || '' %></small>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="text-center py-5 text-muted">No companies found.</div>
        <% } %>
    </div>

    <%- include('../partials/footer') %>
</body>
