<%- include('../partials/header', { title: 'Job Listings' }) %>

    <body>
        <%- include('../partials/navbar') %>

            <section class="home-hero" style="padding: 140px 0 80px;">
                <div class="container position-relative" style="z-index: 2;">
                    <div class="row justify-content-center text-center">
                        <div class="col-lg-8">
                            <span
                                class="badge badge-pill badge-primary px-3 py-2 mb-3 animate__animated animate__fadeInDown">
                                ðŸš€ 124 Jobs Available
                            </span>
                            <h1 class="hero-title mb-3 animate__animated animate__fadeInUp">Find Your Next <span
                                    class="text-primary">Tech Job</span></h1>
                            <p class="hero-subtitle mb-5 animate__animated animate__fadeInUp animate__delay-1s">
                                Browse the latest openings from top technology companies.
                            </p>

                            <div class="search-wrapper animate__animated animate__fadeInUp animate__delay-1s mx-auto">
                                <form action="/jobs" method="GET" class="d-flex w-100 align-items-center">
                                    <div class="flex-grow-1 position-relative">
                                        <i class="fas fa-search position-absolute text-muted"
                                            style="left: 20px; top: 50%; transform: translateY(-50%); z-index: 5;"></i>

                                        <input type="text" name="q" class="search-input"
                                            placeholder="Search by title, skill, or company..."
                                            style="padding-left: 50px;"
                                            value="<%= typeof query !== 'undefined' ? query : '' %>">
                                    </div>

                                    <button type="submit" class="btn-search ml-2">
                                        Search
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="section bg-light pt-5 pb-5" style="min-height: 600px;">
                <div class="container">
                    <div class="row">

                        <div class="col-lg-3 mb-4">
                            <div class="card border-0 shadow-sm p-4 sticky-top"
                                style="top: 100px; z-index: 1; border-radius: 16px;">
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h6 class="font-weight-bold mb-0 text-dark"><i
                                            class="fas fa-filter mr-2 text-primary"></i>Filters</h6>
                                    <a href="/jobs" class="small text-muted text-decoration-none">Clear all</a>
                                </div>

                                <div class="mb-4">
                                    <label class="small font-weight-bold text-muted text-uppercase mb-3">Job
                                        Type</label>
                                    <div class="custom-control custom-checkbox mb-2">
                                        <input type="checkbox" class="custom-control-input" id="typeFull">
                                        <label class="custom-control-label text-dark" for="typeFull">Full-time</label>
                                    </div>
                                    <div class="custom-control custom-checkbox mb-2">
                                        <input type="checkbox" class="custom-control-input" id="typeRemote">
                                        <label class="custom-control-label text-dark" for="typeRemote">Remote</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="typePart">
                                        <label class="custom-control-label text-dark" for="typePart">Part-time</label>
                                    </div>
                                </div>

                                <hr class="my-4 border-light">

                                <div class="mb-4">
                                    <label
                                        class="small font-weight-bold text-muted text-uppercase mb-3">Location</label>
                                    <select class="form-control-modern" style="height: 45px; padding-left: 15px;">
                                        <option>All Locations</option>
                                        <option>Ho Chi Minh</option>
                                        <option>Ha Noi</option>
                                        <option>Da Nang</option>
                                    </select>
                                </div>

                                <button class="btn btn-primary btn-block rounded-pill font-weight-bold shadow-sm py-2">
                                    Apply Filters
                                </button>
                            </div>
                        </div>

                        <div class="col-lg-9">

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <p class="text-muted mb-0 small">Showing <strong>1-10</strong> of 124 jobs</p>
                                <div class="dropdown">
                                    <button class="btn btn-white border shadow-sm btn-sm dropdown-toggle" type="button"
                                        data-toggle="dropdown">
                                        Sort by: <strong>Newest</strong>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right border-0 shadow-sm">
                                        <a class="dropdown-item" href="#">Newest</a>
                                        <a class="dropdown-item" href="#">Salary (High to Low)</a>
                                    </div>
                                </div>
                            </div>

                            <div class="card job-card-horizontal mb-3 card-hover-effect">
                                <div class="card-body d-flex flex-column flex-md-row align-items-md-center p-4">
                                    <img src="https://logo.clearbit.com/google.com" alt="Logo"
                                        class="company-logo-sm mr-4 mb-3 mb-md-0">

                                    <div class="flex-grow-1">
                                        <h5 class="font-weight-bold mb-1">
                                            <a href="#" class="text-dark text-decoration-none stretched-link">Product
                                                Designer</a>
                                        </h5>
                                        <p class="text-muted small mb-2">
                                            <span class="font-weight-bold text-dark">Google Inc.</span>
                                            &bull; Ho Chi Minh
                                            &bull; <span class="text-success">Posted 2 days ago</span>
                                        </p>
                                        <div>
                                            <span class="tag tag-fulltime mr-1">Full-time</span>
                                            <span class="tag" style="background: #f3f4f6; color: #4b5563;">UI/UX</span>
                                        </div>
                                    </div>

                                    <div class="text-md-right mt-3 mt-md-0 pl-md-3"
                                        style="position: relative; z-index: 2;">
                                        <h5 class="text-primary font-weight-bold mb-1">$2000</h5>
                                        <a href="/jobs/456"
                                            class="btn btn-sm btn-outline-primary rounded-pill px-4 font-weight-bold">View
                                            Details</a>
                                    </div>
                                </div>
                            </div>

                            <div class="card job-card-horizontal mb-3 card-hover-effect">
                                <div class="card-body d-flex flex-column flex-md-row align-items-md-center p-4">
                                    <img src="https://logo.clearbit.com/shopee.com" alt="Logo"
                                        class="company-logo-sm mr-4 mb-3 mb-md-0">

                                    <div class="flex-grow-1">
                                        <h5 class="font-weight-bold mb-1">
                                            <a href="#" class="text-dark text-decoration-none stretched-link">Backend Go
                                                Developer</a>
                                        </h5>
                                        <p class="text-muted small mb-2">
                                            <span class="font-weight-bold text-dark">Shopee</span>
                                            &bull; Singapore
                                            &bull; <span class="text-success">Posted 5 hours ago</span>
                                        </p>
                                        <div>
                                            <span class="tag tag-remote mr-1">Remote</span>
                                            <span class="tag" style="background: #f3f4f6; color: #4b5563;">Golang</span>
                                        </div>
                                    </div>

                                    <div class="text-md-right mt-3 mt-md-0 pl-md-3"
                                        style="position: relative; z-index: 2;">
                                        <h5 class="text-primary font-weight-bold mb-1">$3500</h5>
                                        <a href="#"
                                            class="btn btn-sm btn-outline-primary rounded-pill px-4 font-weight-bold">View
                                            Details</a>
                                    </div>
                                </div>
                            </div>

                            <nav class="mt-5">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item disabled">
                                        <a class="page-link border-0 rounded-circle mr-2 shadow-sm" href="#"><i
                                                class="fas fa-chevron-left"></i></a>
                                    </li>
                                    <li class="page-item active">
                                        <a class="page-link border-0 rounded-circle mr-2 shadow-sm" href="#">1</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link border-0 rounded-circle mr-2 shadow-sm" href="#">2</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link border-0 rounded-circle shadow-sm" href="#"><i
                                                class="fas fa-chevron-right"></i></a>
                                    </li>
                                </ul>
                            </nav>

                        </div>
                    </div>
                </div>
            </section>

            <%- include('../partials/footer') %>
    </body>