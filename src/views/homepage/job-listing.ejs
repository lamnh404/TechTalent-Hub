<%- include('../partials/header', { title: 'Tìm việc làm IT' }) %>

<body>
    <%- include('../partials/navbar') %>

    <section class="page-hero bg-light pb-5 pt-5">
        <div class="container mt-5">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h2 class="font-weight-bold text-dark mb-2">Find Your Next Tech Job</h2>
                    <p class="text-muted">Showing <strong>12</strong> jobs available now.</p>
                </div>
                <div class="col-md-4">
                    <form action="/jobs" method="GET">
                        <div class="input-group shadow-sm">
                            <input type="text" class="form-control border-0 py-4" placeholder="Search keywords..." name="q">
                            <div class="input-group-append">
                                <button class="btn btn-primary px-4" type="submit"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <section class="section pt-5">
        <div class="container">
            <div class="row">
                
                <div class="col-lg-3 mb-4">
                    <div class="card border-0 shadow-sm p-3 sticky-top" style="top: 100px; z-index: 1;">
                        <h6 class="font-weight-bold mb-3">Filters</h6>
                        
                        <div class="mb-4">
                            <label class="small font-weight-bold text-muted">Job Type</label>
                            <div class="custom-control custom-checkbox mb-2">
                                <input type="checkbox" class="custom-control-input" id="typeFull">
                                <label class="custom-control-label" for="typeFull">Full-time</label>
                            </div>
                            <div class="custom-control custom-checkbox mb-2">
                                <input type="checkbox" class="custom-control-input" id="typeRemote">
                                <label class="custom-control-label" for="typeRemote">Remote</label>
                            </div>
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="typePart">
                                <label class="custom-control-label" for="typePart">Part-time</label>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="small font-weight-bold text-muted">Location</label>
                            <select class="form-control custom-select-sm">
                                <option>All Locations</option>
                                <option>Ho Chi Minh</option>
                                <option>Ha Noi</option>
                                <option>Da Nang</option>
                            </select>
                        </div>

                        <button class="btn btn-outline-primary btn-block btn-sm">Apply Filters</button>
                    </div>
                </div>

                <div class="col-lg-9">
                    
                    <div class="card job-card-horizontal border-0 shadow-sm mb-3">
                        <div class="card-body d-flex align-items-center p-4">
                            <img src="https://logo.clearbit.com/google.com" alt="Logo" class="company-logo-sm mr-4 d-none d-md-block">
                            <div class="flex-grow-1">
                                <h5 class="font-weight-bold mb-1"><a href="#" class="text-dark text-decoration-none">Product Designer</a></h5>
                                <p class="text-muted small mb-2"><i class="far fa-building mr-1"></i> Google Inc. &bull; <i class="fas fa-map-marker-alt ml-2 mr-1"></i> Ho Chi Minh</p>
                                <div>
                                    <span class="badge badge-soft-primary mr-1">Full-time</span>
                                    <span class="badge badge-soft-secondary">UI/UX</span>
                                </div>
                            </div>
                            <div class="text-right d-none d-md-block">
                                <h5 class="text-success font-weight-bold mb-1">$2000</h5>
                                <a href="#" class="btn btn-sm btn-outline-primary rounded-pill">View Details</a>
                            </div>
                        </div>
                    </div>

                    <div class="card job-card-horizontal border-0 shadow-sm mb-3">
                        <div class="card-body d-flex align-items-center p-4">
                            <img src="https://logo.clearbit.com/shopee.com" alt="Logo" class="company-logo-sm mr-4 d-none d-md-block">
                            <div class="flex-grow-1">
                                <h5 class="font-weight-bold mb-1"><a href="#" class="text-dark text-decoration-none">Backend Go Developer</a></h5>
                                <p class="text-muted small mb-2"><i class="far fa-building mr-1"></i> Shopee &bull; <i class="fas fa-map-marker-alt ml-2 mr-1"></i> Singapore (Remote)</p>
                                <div>
                                    <span class="badge badge-soft-success mr-1">Remote</span>
                                    <span class="badge badge-soft-secondary">Golang</span>
                                </div>
                            </div>
                            <div class="text-right d-none d-md-block">
                                <h5 class="text-success font-weight-bold mb-1">$3500</h5>
                                <a href="#" class="btn btn-sm btn-outline-primary rounded-pill">View Details</a>
                            </div>
                        </div>
                    </div>

                    <nav class="mt-5">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                        </ul>
                    </nav>

                </div>
            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>
</body>