<% 
    // Mock Data cho Seeker Profile
    if (typeof seeker === 'undefined') {
        var seeker = {
            FirstName: "Nguyen",
            LastName: "Van A",
            Email: "nguyenvana@gmail.com",
            PhoneNumber: "0901234567",
            ProfessionalTitle: "Senior Frontend Developer",
            CurrentLocation: "Ho Chi Minh City",
            Bio: "Experienced developer with 5+ years in React, Node.js and modern web technologies. Passionate about UI/UX and performance optimization.",
            Skills: "ReactJS, Node.js, MongoDB, TypeScript, Figma",
            CVFileName: "NguyenVanA_CV_2025.pdf",
            CVUrl: "https://example.com/cv.pdf",
            UpdatedAt: new Date()
        };
    }
%>

<%- include('../partials/header', { title: 'Hồ sơ cá nhân' }) %>

<body class="dashboard-page">
    <div class="dashboard-wrapper">
        
        <%- include('../partials/dashboard-sidebar', { activePage: 'profile' }) %>

        <main class="main-content">
            
            <header class="dashboard-header">
                <h5 class="mb-0 font-weight-bold text-dark">My Profile</h5>
                <div class="d-flex align-items-center">
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-decoration-none text-dark dropdown-toggle" data-toggle="dropdown">
                            <img src="<%= (typeof user !== 'undefined' && user.avatarUrl) ? user.avatarUrl : '/images/default-avatar.png' %>" class="rounded-circle mr-2" width="35" height="35" style="object-fit: cover; border: 1px solid #dee2e6;">
                            <span class="font-weight-bold small mr-1"><%= (typeof user !== 'undefined' && user.email) ? user.email.split('@')[0] : 'Seeker' %></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right border-0 shadow-lg">
                            <a class="dropdown-item" href="/">Back Home</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-danger" href="/auth/logout">Logout</a>
                        </div>
                    </div>
                </div>
            </header>

            <div class="p-4">
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        
                        <div class="card border-0 shadow-sm rounded-lg mb-4">
                            <div class="card-body p-5">
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h5 class="font-weight-bold text-primary mb-0">Personal Information</h5>
                                    <span class="badge badge-soft-success">Last updated: <%= new Date(seeker.UpdatedAt).toLocaleDateString() %></span>
                                </div>
                                <hr class="mb-4">

                                <form action="/seeker/profile/update" method="POST">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="font-weight-bold small text-dark">First Name</label>
                                            <div class="input-wrapper">
                                                <i class="far fa-user input-icon"></i>
                                                <input type="text" class="form-control-modern" name="FirstName" value="<%= seeker.FirstName %>" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="font-weight-bold small text-dark">Last Name</label>
                                            <div class="input-wrapper">
                                                <i class="far fa-user input-icon"></i>
                                                <input type="text" class="form-control-modern" name="LastName" value="<%= seeker.LastName %>" required>
                                            </div>
                                        </div>
                                    </div>
                                   
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="font-weight-bold small text-dark">Email</label>
                                            <div class="input-wrapper">
                                                <i class="far fa-envelope input-icon"></i>
                                                <input type="email" class="form-control-modern" value="<%= seeker.Email %>" disabled style="background-color: #f8f9fa;">
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="font-weight-bold small text-dark">Phone</label>
                                            <div class="input-wrapper">
                                                <i class="fas fa-phone input-icon"></i>
                                                <input type="tel" class="form-control-modern" name="PhoneNumber" value="<%= seeker.PhoneNumber %>">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="font-weight-bold small text-dark">Current Location</label>
                                            <div class="input-wrapper">
                                                <i class="fas fa-map-marker-alt input-icon"></i>
                                                <input type="text" class="form-control-modern" name="CurrentLocation" value="<%= seeker.CurrentLocation %>">
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="font-weight-bold small text-dark">Professional Title</label>
                                            <div class="input-wrapper">
                                                <i class="fas fa-briefcase input-icon"></i>
                                                <input type="text" class="form-control-modern" name="ProfessionalTitle" value="<%= seeker.ProfessionalTitle %>">
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label class="font-weight-bold small text-dark">Bio / Summary</label>
                                        <textarea class="form-control-modern h-auto py-3" name="Bio" rows="4"><%= seeker.Bio %></textarea>
                                    </div>

                                    <div class="text-right mt-4">
                                        <button type="submit" class="btn btn-primary-modern px-4 shadow-sm font-weight-bold">
                                            <i class="fas fa-save mr-2"></i> Save Changes
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm rounded-lg">
                            <div class="card-body p-5">
                                <h5 class="font-weight-bold text-primary mb-4">Skills & CV</h5>
                                
                                <div class="form-group mb-4">
                                    <label class="font-weight-bold small text-dark">Skills</label>
                                    
                                    <% if (seeker.Skills) { %>
                                        <div class="d-flex flex-wrap gap-2 mb-3">
                                            <% seeker.Skills.split(',').forEach(skill => { %>
                                                <span class="badge badge-soft-primary px-3 py-2 mr-2 mb-2" style="font-size: 0.9rem;">
                                                    <%= skill.trim() %> 
                                                    <i class="fas fa-times ml-2 text-muted" style="cursor:pointer"></i>
                                                </span>
                                            <% }) %>
                                        </div>
                                    <% } %>
                                    
                                    <div class="input-wrapper">
                                        <i class="fas fa-tags input-icon"></i>
                                        <input type="text" class="form-control-modern" name="Skills" value="<%= seeker.Skills %>" placeholder="Add skills separated by commas...">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="font-weight-bold small text-dark">Current CV</label>
                                    <div class="d-flex align-items-center p-3 border rounded bg-light">
                                        <div class="mr-3">
                                            <i class="fas fa-file-pdf text-danger fa-2x"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-0 font-weight-bold text-dark"><%= seeker.CVFileName || 'No CV Uploaded' %></h6>
                                            <% if (seeker.CVUrl) { %>
                                                <a href="<%= seeker.CVUrl %>" target="_blank" class="small text-primary font-weight-bold">View PDF</a>
                                            <% } %>
                                        </div>
                                        <button class="btn btn-sm btn-outline-primary shadow-sm font-weight-bold">
                                            <i class="fas fa-upload mr-1"></i> Update CV
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </main>
    </div>
    <%- include('../partials/footer') %>
</body>