<%- include('../partials/header', { title: 'Hồ sơ cá nhân' }) %>

<body class="dashboard-page">
    <div class="dashboard-wrapper">
        
        <%- include('../partials/dashboard-sidebar', { activePage: 'profile' }) %>

        <main class="main-content">
            
            <header class="dashboard-header">
                <h5 class="mb-0 font-weight-bold text-dark">My Profile</h5>
                <div class="d-flex align-items-center">
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-decoration-none text-dark dropdown-toggle" data-toggle="dropdown">
                            <img src="<%= (typeof user !== 'undefined' && user.avatarUrl) ? user.avatarUrl : '/images/default-avatar.png' %>" class="rounded-circle mr-2" width="35" height="35" style="object-fit: cover; border: 1px solid #dee2e6;">
                            <span class="font-weight-bold small mr-1"><%= (typeof user !== 'undefined' && user.email) ? user.email.split('@')[0] : 'Seeker' %></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right border-0 shadow-lg">
                            <a class="dropdown-item" href="/">Back Home</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-danger" href="/auth/logout">Logout</a>
                        </div>
                    </div>
                </div>
            </header>

            <div class="p-4">
                <div class="row justify-content-center">
                    <div class="col-lg-9">
                        
                        <div class="card border-0 shadow-sm rounded-lg mb-4">
                            <div class="card-body p-5">
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h5 class="font-weight-bold text-dark">Personal Information</h5>
                                    <button class="btn btn-sm btn-light text-primary"><i class="fas fa-pen mr-1"></i> Edit</button>
                                </div>

                                <form>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="small font-weight-bold text-muted">First Name</label>
                                            <input type="text" class="form-control-modern" value="John" disabled>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="small font-weight-bold text-muted">Last Name</label>
                                            <input type="text" class="form-control-modern" value="Doe" disabled>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="small font-weight-bold text-muted">Email</label>
                                            <input type="email" class="form-control-modern" value="john.doe@example.com" disabled>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="small font-weight-bold text-muted">Phone</label>
                                            <input type="tel" class="form-control-modern" value="0901234567">
                                        </div>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="small font-weight-bold text-muted">Professional Title</label>
                                        <input type="text" class="form-control-modern" value="Senior Frontend Developer">
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label class="small font-weight-bold text-muted">Bio / Summary</label>
                                        <textarea class="form-control-modern h-auto py-3" rows="4">Experienced developer with 5+ years in React and Node.js...</textarea>
                                    </div>

                                    <div class="text-right mt-4">
                                        <button type="submit" class="btn btn-primary-modern px-4">Save Changes</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm rounded-lg">
                            <div class="card-body p-5">
                                <h5 class="font-weight-bold text-dark mb-4">Skills & CV</h5>
                                
                                <div class="form-group mb-4">
                                    <label class="small font-weight-bold text-muted">Skills</label>
                                    <div class="d-flex flex-wrap gap-2 mb-2">
                                        <span class="badge badge-pill badge-light border px-3 py-2">ReactJS <i class="fas fa-times ml-2 text-muted" style="cursor:pointer"></i></span>
                                        <span class="badge badge-pill badge-light border px-3 py-2">Node.js <i class="fas fa-times ml-2 text-muted" style="cursor:pointer"></i></span>
                                        <span class="badge badge-pill badge-light border px-3 py-2">MongoDB <i class="fas fa-times ml-2 text-muted" style="cursor:pointer"></i></span>
                                    </div>
                                    <input type="text" class="form-control-modern" placeholder="Add new skill...">
                                </div>

                                <div class="form-group">
                                    <label class="small font-weight-bold text-muted">Current CV</label>
                                    <div class="d-flex align-items-center p-3 border rounded bg-light">
                                        <i class="fas fa-file-pdf text-danger fa-2x mr-3"></i>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-0 font-weight-bold text-dark">My_Resume_2025.pdf</h6>
                                            <small class="text-muted">Uploaded on Oct 24, 2025</small>
                                        </div>
                                        <button class="btn btn-sm btn-outline-primary mr-2">View</button>
                                        <button class="btn btn-sm btn-outline-danger">Update</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </main>
    </div>
    <%- include('../partials/footer') %>
</body>