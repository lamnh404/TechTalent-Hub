            ProfessionalTitle: "Senior Frontend Developer",
            CurrentLocation: "Ho Chi Minh City",
            ProfileSummary: "Experienced developer with 5+ years in React...",
            // Quan trọng: Skill phải là Array để JS xử lý
            Skills: [
                { SkillID: 1, SkillName: "React", ProficiencyLevel: "Expert", YearOfExperience: 5 },
                { SkillID: 2, SkillName: "Node.js", ProficiencyLevel: "Advanced", YearOfExperience: 3 }
            ]
