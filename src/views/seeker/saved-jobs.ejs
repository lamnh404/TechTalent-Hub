<%- include('../partials/header', { title: 'Việc làm đã lưu' }) %>

<body class="dashboard-page">
    <div class="dashboard-wrapper">
        
        <%- include('../partials/dashboard-sidebar', { activePage: 'saved' }) %>

        <main class="main-content">
            
            <header class="dashboard-header">
                <h5 class="mb-0 font-weight-bold text-dark">Saved Jobs</h5>
                <div class="d-flex align-items-center">
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-decoration-none text-dark dropdown-toggle" data-toggle="dropdown">
                            <img src="<%= (typeof user !== 'undefined' && user.avatarUrl) ? user.avatarUrl : '/images/default-avatar.png' %>" class="rounded-circle mr-2" width="35" height="35" style="object-fit: cover; border: 1px solid #dee2e6;">
                            <span class="font-weight-bold small mr-1"><%= (typeof user !== 'undefined' && user.email) ? user.email.split('@')[0] : 'Seeker' %></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right border-0 shadow-lg">
                            <a class="dropdown-item" href="/">Back Home</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-danger" href="/auth/logout">Logout</a>
                        </div>
                    </div>
                </div>
            </header>

            <div class="p-4">
                <div class="row">
                    
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card border-0 shadow-sm h-100 job-card p-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <img src="https://logo.clearbit.com/netflix.com" width="50" class="rounded border p-1">
                                <button class="btn btn-sm btn-link text-danger" title="Remove"><i class="fas fa-heart"></i></button>
                            </div>
                            <div class="mt-3">
                                <h6 class="font-weight-bold text-dark mb-1">Senior Data Scientist</h6>
                                <p class="small text-muted mb-2">Netflix • Remote</p>
                                <span class="badge badge-soft-primary">Full-time</span>
                            </div>
                            <div class="mt-auto pt-3 d-flex justify-content-between align-items-center">
                                <small class="text-muted">Saved 2 days ago</small>
                                <a href="/jobs/3" class="btn btn-sm btn-outline-primary rounded-pill px-3">Apply</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card border-0 shadow-sm h-100 job-card p-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <img src="https://logo.clearbit.com/airbnb.com" width="50" class="rounded border p-1">
                                <button class="btn btn-sm btn-link text-danger" title="Remove"><i class="fas fa-heart"></i></button>
                            </div>
                            <div class="mt-3">
                                <h6 class="font-weight-bold text-dark mb-1">UX Researcher</h6>
                                <p class="small text-muted mb-2">Airbnb • Singapore</p>
                                <span class="badge badge-soft-primary">Contract</span>
                            </div>
                            <div class="mt-auto pt-3 d-flex justify-content-between align-items-center">
                                <small class="text-muted">Saved 1 week ago</small>
                                <a href="/jobs/4" class="btn btn-sm btn-outline-primary rounded-pill px-3">Apply</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </main>
    </div>
    <%- include('../partials/footer') %>
</body>