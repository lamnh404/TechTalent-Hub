<%- include('../partials/header', { title: 'Việc làm đã lưu' }) %>

<body class="dashboard-page">
    <div class="dashboard-wrapper">
        
        <%- include('../partials/dashboard-sidebar', { activePage: 'saved' }) %>

        <main class="main-content">
            
            <header class="dashboard-header">
                <h5 class="mb-0 font-weight-bold text-dark">Saved Jobs</h5>
                <div class="d-flex align-items-center">
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-decoration-none text-dark dropdown-toggle" data-toggle="dropdown">
                            <img src="<%= (typeof user !== 'undefined' && user.avatarUrl) ? user.avatarUrl : '/images/default-avatar.png' %>" class="rounded-circle mr-2" width="35" height="35" style="object-fit: cover; border: 1px solid #dee2e6;">
                            <span class="font-weight-bold small mr-1"><%= (typeof user !== 'undefined' && user.email) ? user.email.split('@')[0] : 'Seeker' %></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right border-0 shadow-lg">
                            <a class="dropdown-item" href="/">Back Home</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-danger" href="/auth/logout">Logout</a>
                        </div>
                    </div>
                </div>
            </header>

            <div class="p-4">
                <div class="row">
                    
                    <% if (savedJobs && savedJobs.length > 0) { %>
                        <% savedJobs.forEach(job => { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card border-0 shadow-sm h-100 job-card p-4 hover-scale" style="border-radius: 12px; transition: all 0.3s;">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="bg-white p-2 rounded border" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                                            <img src="<%= job.LogoURL %>" class="img-fluid" style="max-height: 100%;">
                                        </div>
                                        <button class="btn btn-sm btn-light text-danger shadow-sm rounded-circle" title="Remove from saved" style="width: 32px; height: 32px;">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                    
                                    <div class="mt-4">
                                        <h5 class="font-weight-bold text-dark mb-1 text-truncate" title="<%= job.JobTitle %>">
                                            <a href="/jobs/<%= job.JobID %>" class="text-dark text-decoration-none"><%= job.JobTitle %></a>
                                        </h5>
                                        <p class="small text-muted mb-2"><%= job.CompanyName %> • <%= job.Location %></p>
                                        
                                        <div class="d-flex align-items-center mb-3">
                                            <span class="badge badge-soft-primary mr-2"><%= job.EmploymentType %></span>
                                            <span class="text-success font-weight-bold small">
                                                $<%= job.SalaryMin.toLocaleString() %> - $<%= job.SalaryMax.toLocaleString() %>
                                            </span>
                                        </div>
                                    </div>
                                    
                                    <div class="mt-auto pt-3 border-top d-flex justify-content-between align-items-center">
                                        <small class="text-muted font-italic">Saved <%= job.SavedDate %></small>
                                        <a href="/jobs/<%= job.JobID %>" class="btn btn-sm btn-primary-modern shadow-sm px-3 rounded-pill">Apply Now</a>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div class="col-12 text-center py-5">
                            <div class="mb-3 opacity-50">
                                <i class="far fa-heart fa-4x text-muted"></i>
                            </div>
                            <h4 class="text-dark">No saved jobs yet</h4>
                            <p class="text-muted">Jobs you save will appear here for easy access.</p>
                            <a href="/jobs" class="btn btn-primary px-4 rounded-pill mt-2">Browse Jobs</a>
                        </div>
                    <% } %>

                </div>
            </div>
        </main>
    </div>
    <%- include('../partials/footer') %>
</body>