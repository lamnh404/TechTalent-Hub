<%- include('../partials/header', { title: 'My Applications' }) %>

<body class="dashboard-page">
    <div class="dashboard-wrapper">
        
        <%- include('../partials/dashboard-sidebar', { activePage: 'applications' }) %>

        <main class="main-content">
            
            <header class="dashboard-header">
                <h5 class="mb-0 font-weight-bold text-dark">My Applications</h5>
                
                <div class="d-flex align-items-center">
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-decoration-none text-dark dropdown-toggle" data-toggle="dropdown">
                            <img src="<%= (user && user.avatarUrl) ? user.avatarUrl : '/images/default-avatar.png' %>" class="rounded-circle mr-2" width="35" height="35" style="object-fit: cover; border: 1px solid #dee2e6;">
                            <span class="font-weight-bold small mr-1"><%= (user && user.email) ? user.email.split('@')[0] : 'Seeker' %></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right border-0 shadow-lg">
                            <a class="dropdown-item" href="/">Back Home</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-danger" href="/auth/logout">Logout</a>
                        </div>
                    </div>
                </div>
            </header>

            <div class="p-4">
                
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="stat-card border-left-primary">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Applied</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">12</div>
                                </div>
                                <div class="stat-icon blue mb-0"><i class="fas fa-paper-plane"></i></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card border-left-warning">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Interviews</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">3</div>
                                </div>
                                <div class="stat-icon purple mb-0"><i class="fas fa-comments"></i></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="custom-table-wrapper">
                    <table class="table custom-table table-hover">
                        <thead>
                            <tr>
                                <th>Job Title</th>
                                <th>Company</th>
                                <th>Applied Date</th>
                                <th>Status</th>
                                <th class="text-right">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <a href="/jobs/123" class="font-weight-bold text-dark text-decoration-none">Product Designer</a>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://logo.clearbit.com/google.com" width="30" class="rounded mr-2 border">
                                        <span>Google Inc.</span>
                                    </div>
                                </td>
                                <td class="text-muted">Oct 25, 2025</td>
                                <td>
                                    <span class="badge badge-soft-warning px-2 py-1" style="background:#fef3c7; color:#b45309; font-size:0.75rem;">In Review</span>
                                </td>
                                <td class="text-right">
                                    <button class="btn btn-sm btn-outline-secondary">View Status</button>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <a href="/jobs/456" class="font-weight-bold text-dark text-decoration-none">Frontend Developer</a>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://logo.clearbit.com/spotify.com" width="30" class="rounded mr-2 border">
                                        <span>Spotify</span>
                                    </div>
                                </td>
                                <td class="text-muted">Oct 20, 2025</td>
                                <td>
                                    <span class="badge badge-soft-danger px-2 py-1" style="background:#fee2e2; color:#991b1b; font-size:0.75rem;">Rejected</span>
                                </td>
                                <td class="text-right">
                                    <button class="btn btn-sm btn-outline-secondary">View Status</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </main>
    </div>
    <%- include('../partials/footer') %>
</body>