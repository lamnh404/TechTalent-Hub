<%- include('../partials/header', { title: 'Settings' }) %>

<body class="dashboard-page">
    <div class="dashboard-wrapper">
        <%- include('../partials/navbar', { activePage: 'settings' }) %>

        <main class="main-content">
            <header class="dashboard-header">
                <h5 class="mb-0 font-weight-bold text-dark">Settings</h5>
            </header>

            <div class="p-4">
                <div class="row justify-content-center">
                    <div class="col-lg-8">

                        <div class="card border-0 shadow-sm rounded-lg mb-4">
                            <div class="card-body p-5">
                                <h5 class="font-weight-bold text-primary mb-4">Account Settings</h5>
                                <hr class="mb-4">
                                <% if (typeof success !== 'undefined') { %>
                                    <div class="alert alert-success"><%= success %></div>
                                <% } %>
                                <% if (typeof error !== 'undefined') { %>
                                    <div class="alert alert-danger"><%= error %></div>
                                <% } %>

                                <!-- Date of Birth moved to Profile; Settings now only handles password -->

                                <hr class="my-4">

                                <h6 class="font-weight-bold text-dark">Change Password</h6>
                                <form action="/settings/change-password" method="POST">
                                    <div class="form-group mb-3">
                                        <label class="font-weight-bold small text-dark">Current Password</label>
                                        <input type="password" class="form-control-modern" name="currentPassword" required>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="font-weight-bold small text-dark">New Password</label>
                                            <input type="password" class="form-control-modern" name="newPassword" required>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="font-weight-bold small text-dark">Confirm New Password</label>
                                            <input type="password" class="form-control-modern" name="confirmPassword" required>
                                        </div>
                                    </div>

                                    <div class="text-right mt-3">
                                        <button type="submit" class="btn btn-primary-modern px-4 shadow-sm font-weight-bold">
                                            <i class="fas fa-key mr-2"></i> Change Password
                                        </button>
                                    </div>
                                </form>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </main>
    </div>

    <%- include('../partials/footer') %>
</body>
