<%- include('../partials/header', { title: 'Đăng ký' }) %>

<section class="auth-hero sky-hero">
  <!-- Logo góc trái -->
  <div class="brand-logo">
    <img src="/images/favicon-t.svg" alt="TechTalent Hub Logo" class="brand-logo-icon">
    <div class="brand-name-container">
      <span class="brand-name-main">TechTalent</span><span class="brand-name-accent">Hub</span>
    </div>
  </div>

  <div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
      <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <div class="card auth-card glass-card">
          <div class="card-body p-4 p-md-5">

            <div class="sheet-badge mx-auto mb-4">
              <i class="fas fa-user-plus"></i>
            </div>

            <div class="text-center mb-4">
              <h3 class="mb-2 font-weight-bold">Create your account</h3>
              <p class="text-muted small mb-0">Join our community of talents and companies.</p>
            </div>

            <% if (typeof error !== 'undefined' && error) { %>
              <div class="alert alert-danger auth-alert" role="alert">
                <i class="fas fa-exclamation-circle mr-2"></i><%= error %>
              </div>
            <% } %>

            <form action="/register" method="POST" id="registerForm" novalidate>
              
              <!-- Full Name Input -->
              <div class="form-group mb-3">
                <div class="input-wrapper">
                  <i class="far fa-user input-icon"></i>
                  <input type="text" class="form-control-modern" id="name" name="name" placeholder="Full Name" required>
                </div>
              </div>

              <!-- Email Input -->
              <div class="form-group mb-3">
                <div class="input-wrapper">
                  <i class="far fa-envelope input-icon"></i>
                  <input type="email" class="form-control-modern" id="email" name="email" placeholder="Email" required autocomplete="email">
                </div>
              </div>

              <!-- Password Input -->
              <div class="form-group mb-3">
                <div class="input-wrapper">
                  <i class="fas fa-lock input-icon"></i>
                  <input type="password" class="form-control-modern" id="password" name="password" placeholder="Password" required autocomplete="new-password">
                </div>
              </div>

              <!-- Role Selection -->
              <div class="form-group mb-4">
                 <div class="input-wrapper">
                    <i class="fas fa-briefcase input-icon"></i>
                    <select class="form-control-modern" id="role" name="role" required>
                        <option value="" disabled selected>I am a...</option>
                        <option value="JobSeeker">Job Seeker</option>
                        <option value="Company">Company / Recruiter</option>
                    </select>
                 </div>
              </div>

              <!-- Submit Button -->
              <button type="submit" class="btn btn-cta-dark btn-block">Create Account</button>
            </form>

            <!-- Login Link -->
            <div class="register-link-container">
              Already have an account? <a href="/login">Sign in</a>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>