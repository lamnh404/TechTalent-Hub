<%- include('../partials/header', { title: 'Đăng ký tài khoản' }) %>

<body class="auth-layout-page">
    <section class="auth-hero sky-hero">
        
        <a href="/" class="brand-logo text-decoration-none">
            <img src="/images/favicon-t.svg" alt="TechTalent Hub Logo" class="brand-logo-icon">
            <div class="brand-name-container">
                <span class="brand-name-main">TechTalent</span><span class="brand-name-accent">Hub</span>
            </div>
        </a>

        <div class="sky-arcs"></div>
        <div class="sky-clouds"></div>

        <div class="container">
            <div class="row justify-content-center align-items-center min-vh-100">
                <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5">
                    <div class="card auth-card glass-card">
                        <div class="card-body p-4 p-md-5">

                            <div class="text-center mb-4">
                                <h3 class="mb-1 font-weight-bold">Create Account</h3>
                                <p class="text-muted small">Join our community today.</p>
                            </div>

                            <% if (typeof error !== 'undefined' && error) { %>
                                <div class="alert alert-danger auth-alert shadow-sm">
                                    <i class="fas fa-exclamation-circle mr-2"></i><%= error %>
                                </div>
                            <% } %>

                            <form action="/auth/register" method="POST" id="registerForm" novalidate>
                                
                                <div class="form-group mb-3">
                                    <div class="input-wrapper">
                                        <i class="far fa-envelope input-icon"></i>
                                        <input type="email" class="form-control-modern" name="email" placeholder="Email Address" required value="<%= typeof oldInput !== 'undefined' ? oldInput.email : '' %>">
                                    </div>
                                </div>

                                <div class="form-group mb-3">
                                    <div class="input-wrapper">
                                        <i class="fas fa-lock input-icon"></i>
                                        <input type="password" class="form-control-modern" id="password" name="password" placeholder="Password" required autocomplete="new-password">
                                    </div>
                                </div>

                                <div class="form-group mb-4">
                                    <div class="input-wrapper">
                                        <i class="fas fa-check-circle input-icon"></i>
                                        <input type="password" class="form-control-modern" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required>
                                    </div>
                                    <small id="passwordError" class="text-danger mt-1 d-none" style="font-size: 0.85rem; padding-left: 10px;">
                                        <i class="fas fa-times-circle mr-1"></i> Passwords do not match
                                    </small>
                                </div>

                                <div class="form-group mb-4">
                                    <label class="font-weight-bold small text-dark mb-2 ml-1">I am a...</label>
                                    <div class="row no-gutters role-selector">
                                        <div class="col-6 pr-1">
                                            <label class="role-option">
                                                <input type="radio" name="role" value="JobSeeker" checked>
                                                <div class="role-card">
                                                    <i class="fas fa-user-tie mb-2"></i>
                                                    <span>Job Seeker</span>
                                                </div>
                                            </label>
                                        </div>
                                        <div class="col-6 pl-1">
                                            <label class="role-option">
                                                <input type="radio" name="role" value="Company">
                                                <div class="role-card">
                                                    <i class="fas fa-building mb-2"></i>
                                                    <span>Recruiter</span>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-cta-dark btn-block shadow">
                                    Continue <i class="fas fa-arrow-right ml-2"></i>
                                </button>
                            </form>

                            <div class="divider-modern my-4">
                                <span class="divider-text">Or register with</span>
                            </div>

                            <div class="social-buttons">
                                <a class="social-btn" href="/auth/google"><i class="fab fa-google"></i></a>
                                <a class="social-btn" href="/auth/facebook"><i class="fab fa-facebook-f"></i></a>
                                <a class="social-btn social-btn-apple" href="/auth/apple"><i class="fab fa-apple"></i></a>
                            </div>

                            <div class="register-link-container mt-4">
                                Already have an account? <a href="/auth/login" class="font-weight-bold">Sign in</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        const form = document.getElementById('registerForm');
        const password = document.getElementById('password');
        const confirmPassword = document.getElementById('confirmPassword');
        const errorMsg = document.getElementById('passwordError');

        // Hàm kiểm tra
        function checkPasswordMatch() {
            if (confirmPassword.value && password.value !== confirmPassword.value) {
                errorMsg.classList.remove('d-none');
                confirmPassword.classList.add('is-invalid');
                return false;
            } else {
                errorMsg.classList.add('d-none');
                confirmPassword.classList.remove('is-invalid');
                return true;
            }
        }

        // Lắng nghe sự kiện gõ phím
        confirmPassword.addEventListener('input', checkPasswordMatch);
        password.addEventListener('input', checkPasswordMatch);

        // Chặn submit nếu sai
        form.addEventListener('submit', function(e) {
            if (!checkPasswordMatch()) {
                e.preventDefault();
                // Rung lắc form để báo hiệu lỗi (Hiệu ứng UX)
                form.classList.add('animate__animated', 'animate__shakeX');
                setTimeout(() => form.classList.remove('animate__animated', 'animate__shakeX'), 500);
            }
        });
    </script>

    <%- include('../partials/footer') %>
</body>