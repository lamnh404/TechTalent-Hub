<%
    // Mock Data
    if (typeof jobs === 'undefined') {
        var jobs = [
            { JobID: 1, JobTitle: "Senior React Developer", PostedDate: new Date(), Deadline: new Date(Date.now() + 86400000 * 30), Applicants: 15, Status: "Open", Location: "Ho Chi Minh", EmploymentType: "Full-time" },
            { JobID: 2, JobTitle: "Backend Node.js Engineer", PostedDate: new Date(Date.now() - 86400000 * 5), Deadline: new Date(Date.now() + 86400000 * 10), Applicants: 8, Status: "Closed", Location: "Remote", EmploymentType: "Contract" }
        ];
    }
%>

<%- include('../partials/header', { title: 'Quản lý tin đăng' }) %>

<body class="dashboard-page">
    <div class="dashboard-wrapper">
        <%- include('../partials/dashboard-sidebar', { activePage: 'my-jobs' }) %>

        <main class="main-content">
            <header class="dashboard-header">
                <h5 class="mb-0 font-weight-bold text-dark">My Job Posts</h5>
                <div class="d-flex align-items-center">
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-decoration-none text-dark dropdown-toggle" data-toggle="dropdown">
                            <img src="<%= (typeof user !== 'undefined' && user.avatarUrl) ? user.avatarUrl : '/images/default-avatar.png' %>" class="rounded-circle mr-2" width="35" height="35" style="object-fit: cover; border: 1px solid #dee2e6;">
                            <span class="font-weight-bold small mr-1"><%= (typeof user !== 'undefined' && user.email) ? user.email.split('@')[0] : 'Company' %></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right border-0 shadow-lg">
                            <a class="dropdown-item" href="/">Back Home</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-danger" href="/auth/logout">Logout</a>
                        </div>
                    </div>
                </div>
            </header>

            <div class="p-4">
                <div class="card border-0 shadow-sm rounded-lg mb-4">
                    <div class="card-body p-3 d-flex flex-column flex-md-row justify-content-between align-items-center">
                        <div class="d-flex align-items-center w-100 w-md-auto mb-3 mb-md-0">
                            <div class="position-relative mr-3" style="width: 300px;">
                                <i class="fas fa-search position-absolute text-muted" style="left: 15px; top: 50%; transform: translateY(-50%);"></i>
                                <input type="text" class="form-control-modern pl-5" placeholder="Search by title..." style="height: 45px;">
                            </div>
                            <select class="form-control-modern" style="width: 150px; height: 45px; padding-left: 15px;">
                                <option>All Status</option>
                                <option>Active</option>
                                <option>Closed</option>
                            </select>
                        </div>
                        <a href="/company/jobs/create" class="btn btn-primary-modern shadow-sm px-4 py-2 text-white font-weight-bold">
                            <i class="fas fa-plus mr-2"></i> Post New Job
                        </a>
                    </div>
                </div>

                <div class="card border-0 shadow-sm rounded-lg overflow-hidden">
                    <div class="table-responsive">
                        <table class="table custom-table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="pl-4 py-3 border-top-0" style="width: 35%;">Job Title</th>
                                    <th class="py-3 border-top-0">Posted Date</th>
                                    <th class="py-3 border-top-0">Deadline</th>
                                    <th class="text-center py-3 border-top-0">Applicants</th>
                                    <th class="text-center py-3 border-top-0">Status</th>
                                    <th class="text-right py-3 border-top-0 pr-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (jobs && jobs.length > 0) { %>
                                    <% jobs.forEach(job => { %>
                                        <tr>
                                            <td class="pl-4 align-middle">
                                                <div class="d-flex flex-column">
                                                    <span class="font-weight-bold text-dark"><%= job.JobTitle %></span>
                                                    <small class="text-muted"><%= job.EmploymentType %> • <%= job.Location %></small>
                                                </div>
                                            </td>
                                            <td class="align-middle text-muted"><%= new Date(job.PostedDate).toLocaleDateString() %></td>
                                            <td class="align-middle text-muted"><%= job.Deadline ? new Date(job.Deadline).toLocaleDateString() : 'N/A' %></td>
                                            <td class="align-middle text-center">
                                                <a href="/company/candidates?jobId=<%= job.JobID %>" class="badge badge-pill badge-light border px-3 hover-primary text-decoration-none">
                                                    <%= job.Applicants %> <i class="fas fa-user-friends ml-1 text-muted"></i>
                                                </a>
                                            </td>
                                            <td class="align-middle text-center">
                                                <% if (job.Status === 'Open') { %>
                                                    <span class="badge badge-soft-success px-3 py-2">Active</span>
                                                <% } else { %>
                                                    <span class="badge badge-soft-secondary px-3 py-2">Closed</span>
                                                <% } %>
                                            </td>
                                            <td class="align-middle text-right pr-4">
                                                <div class="btn-group">
                                                    <button class="btn btn-sm btn-light text-primary shadow-sm mr-2" title="Edit"><i class="fas fa-pen"></i></button>
                                                    <button class="btn btn-sm btn-light text-muted shadow-sm mr-2" title="Close/Reopen"><i class="fas fa-power-off"></i></button>
                                                    <button class="btn btn-sm btn-light text-danger shadow-sm" title="Delete"><i class="fas fa-trash"></i></button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" class="text-center py-5">
                                            <div class="mb-3 opacity-50"><i class="fas fa-inbox fa-3x text-muted"></i></div>
                                            <p class="text-muted">No jobs posted yet.</p>
                                            <a href="/company/jobs/create" class="btn btn-sm btn-outline-primary">Create your first job</a>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <% if (jobs && jobs.length > 0) { %>
                <nav class="mt-4">
                    <ul class="pagination justify-content-end">
                        <li class="page-item disabled"><a class="page-link border-0 text-muted bg-transparent" href="#">Prev</a></li>
                        <li class="page-item active"><a class="page-link border-0 rounded-circle shadow-sm mx-1" href="#">1</a></li>
                        <li class="page-item"><a class="page-link border-0 rounded-circle bg-transparent mx-1" href="#">2</a></li>
                        <li class="page-item"><a class="page-link border-0 text-muted bg-transparent" href="#">Next</a></li>
                    </ul>
                </nav>
                <% } %>
            </div>
        </main>
    </div>
    <%- include('../partials/footer') %>
</body>