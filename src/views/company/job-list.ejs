<%- include('../partials/header', { title: 'My Job Posts' }) %>

    <body class="dashboard-page">
        <div class="dashboard-wrapper">
            <%- include('../partials/navbar', { activePage: 'manage-jobs' }) %>

                <main class="main-content">
                    <header class="dashboard-header">
                        <h5 class="mb-0 font-weight-bold text-dark">My Job Posts</h5>
                    </header>

                    <div class="p-4">
                        <div class="card border-0 shadow-sm rounded-lg mb-4">
                            <div class="card-body p-3 d-flex flex-column flex-md-row justify-content-between align-items-center">
                                <form class="d-flex align-items-center w-100 w-md-auto mb-3 mb-md-0" method="GET" action="/company/jobs">
                                    <div class="position-relative mr-3" style="width: 300px;">
                                        <i class="fas fa-search position-absolute text-muted" style="left: 15px; top: 50%; transform: translateY(-50%);"></i>
                                        <input type="text" name="search" value="<%= typeof search !== 'undefined' ? search : '' %>" class="form-control-modern pl-5" placeholder="Search by title..." style="height: 45px;">
                                    </div>
                                    <select name="status" class="form-control-modern" style="width: 180px; height: 45px;">
                                        <option value="all" <%= (!status || status === 'all') ? 'selected' : '' %>>All Status</option>
                                        <option value="active" <%= (status === 'active') ? 'selected' : '' %>>Active</option>
                                        <option value="closed" <%= (status === 'closed') ? 'selected' : '' %>>Closed</option>
                                    </select>
                                    <div class="ml-2">
                                        <button type="submit" class="btn btn-sm btn-primary">Filter</button>
                                    </div>
                                </form>
                                <a href="/company/jobs/create" class="btn btn-primary-modern shadow-sm px-4 py-2 text-white font-weight-bold">
                                    <i class="fas fa-plus mr-2"></i> Post New Job
                                </a>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm rounded-lg overflow-hidden">
                            <div class="table-responsive">
                                <table class="table custom-table table-hover mb-0">
                                    <thead class="bg-light">
                                        <tr>
                                            <th class="pl-4 py-3 border-top-0" style="width: 35%;">Job Title</th>
                                            <th class="py-3 border-top-0">Posted Date</th>
                                            <th class="py-3 border-top-0">Deadline</th>
                                            <th class="text-center py-3 border-top-0">Applicants</th>
                                            <th class="text-center py-3 border-top-0">Status</th>
                                            <th class="text-right py-3 border-top-0 pr-4">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (typeof jobs !=='undefined' && jobs.length> 0) { %>
                                            <% jobs.forEach(job=> { %>
                                                <tr>
                                                    <td class="pl-4 align-middle">
                                                        <div class="d-flex flex-column">
                                                            <span class="font-weight-bold text-dark">
                                                                <%= job.JobTitle %>
                                                            </span>
                                                            <small class="text-muted">
                                                                <%= job.EmploymentType %> â€¢ <%= job.Location %>
                                                            </small>
                                                        </div>
                                                    </td>
                                                    <td class="align-middle text-muted">
                                                        <% const _pd = job.PostedDate ? new Date(job.PostedDate) : null; %>
                                                        <%= _pd ? _pd.toLocaleDateString('vi-VN') : '' %>
                                                    </td>
                                                    <td class="align-middle text-muted">
                                                        <% const _dl = job.Deadline ? new Date(job.Deadline) : null; %>
                                                        <%= _dl ? _dl.toLocaleDateString('vi-VN') : 'N/A' %>
                                                    </td>
                                                    <td class="align-middle text-center">
                                                        <a href="/company/candidates?jobId=<%= job.JobID %>"
                                                            class="badge badge-pill badge-light border px-3 hover-primary text-decoration-none">
                                                            <%= job.Applicants %> <i
                                                                    class="fas fa-user-friends ml-1 text-muted"></i>
                                                        </a>
                                                    </td>
                                                    <td class="align-middle text-center">
                                                        <% if (job.Status==='Open' ) { %>
                                                            <span
                                                                class="badge badge-soft-success px-3 py-2">Active</span>
                                                            <% } else { %>
                                                                <span
                                                                    class="badge badge-soft-secondary px-3 py-2">Closed</span>
                                                                <% } %>
                                                    </td>
                                                    <td class="align-middle text-right pr-4">
                                                        <div class="btn-group">
                                                            <a href="/company/jobs/<%= job.JobID %>/edit"
                                                                class="btn btn-sm btn-light text-primary shadow-sm mr-2"
                                                                title="Edit"><i class="fas fa-pen"></i></a>
                                                            <a href="/jobs/<%= job.JobID %>" target="_blank"
                                                                class="btn btn-sm btn-light text-info shadow-sm mr-2" title="View">
                                                                <i class="fas fa-eye"></i>
                                                            </a>

                                                            <form action="/company/jobs/<%= job.JobID %>/status"
                                                                method="POST" class="d-inline mr-2">
                                                                <input type="hidden" name="status"
                                                                    value="<%= job.Status === 'Open' ? 'Closed' : 'Open' %>">
                                                                <button type="submit"
                                                                    class="btn btn-sm btn-light text-muted shadow-sm"
                                                                    title="<%= job.Status === 'Open' ? 'Close' : 'Reopen' %>">
                                                                    <i
                                                                        class="fas fa-power-off <%= job.Status === 'Open' ? 'text-danger' : 'text-success' %>"></i>
                                                                </button>
                                                            </form>

                                                            <form action="/company/jobs/<%= job.JobID %>/delete"
                                                                method="POST" class="d-inline"
                                                                onsubmit="return confirm('Are you sure you want to delete this job?');">
                                                                <button type="submit"
                                                                    class="btn btn-sm btn-light text-danger shadow-sm"
                                                                    title="Delete"><i class="fas fa-trash"></i></button>
                                                            </form>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="6" class="text-center py-5">
                                                                <div class="mb-3 opacity-50"><i
                                                                        class="fas fa-inbox fa-3x text-muted"></i></div>
                                                                <p class="text-muted">No jobs posted yet.</p>
                                                                <a href="/company/jobs/create"
                                                                    class="btn btn-sm btn-outline-primary">Create your
                                                                    first job</a>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <% if (typeof totalPages !=='undefined' && totalPages> 1) { %>
                            <nav class="mt-4">
                                <ul class="pagination justify-content-end">
                                    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                        <a class="page-link border-0 text-muted bg-transparent"
                                            href="/company/jobs?page=<%= currentPage - 1 %><%= typeof search !== 'undefined' && search ? ('&search=' + encodeURIComponent(search)) : '' %><%= typeof status !== 'undefined' && status ? ('&status=' + encodeURIComponent(status)) : '' %>">Prev</a>
                                    </li>

                                    <% for(let i=1; i <=totalPages; i++) { %>
                                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                            <a class="page-link border-0 rounded-circle <%= currentPage === i ? 'shadow-sm' : 'bg-transparent' %> mx-1"
                                                href="/company/jobs?page=<%= i %><%= typeof search !== 'undefined' && search ? ('&search=' + encodeURIComponent(search)) : '' %><%= typeof status !== 'undefined' && status ? ('&status=' + encodeURIComponent(status)) : '' %>">
                                                <%= i %>
                                            </a>
                                        </li>
                                        <% } %>

                                            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                <a class="page-link border-0 text-muted bg-transparent"
                                                    href="/company/jobs?page=<%= currentPage + 1 %><%= typeof search !== 'undefined' && search ? ('&search=' + encodeURIComponent(search)) : '' %><%= typeof status !== 'undefined' && status ? ('&status=' + encodeURIComponent(status)) : '' %>">Next</a>
                                            </li>
                                </ul>
                            </nav>
                            <% } %>
                    </div>
                </main>
        </div>
        <%- include('../partials/footer') %>
    </body>