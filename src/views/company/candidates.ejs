<% if (!candidates) { candidates = [] } %>

<%- include('../partials/header', { title: 'Candidates Management' }) %>

<body class="dashboard-page">
    <div class="dashboard-wrapper">
        
        <%- include('../partials/navbar', { activePage: 'candidates' }) %>

        <main class="main-content">
            
            <header class="dashboard-header">
                <h5 class="mb-0 font-weight-bold text-dark">Candidates</h5>
            </header>

            <div class="p-4">
                
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card border-0 shadow-sm p-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-light p-3 rounded mr-3 text-primary">
                                    <i class="fas fa-users fa-lg"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted">Total Candidates</h6>
                                    <h4 class="font-weight-bold mb-0"><%= candidates ? candidates.length : 0 %></h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <% if (candidates && candidates.length > 0) { %>
                            <div class="custom-table-wrapper bg-white shadow-sm rounded-lg overflow-hidden">
                                <table class="table custom-table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th class="pl-4">Candidate</th>
                                            <th>Applied For</th>
                                            <th>Applied Date</th>
                                            <th>Status</th>
                                            <th class="text-right pr-4">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% candidates.forEach(candidate => { %>
                                            <tr>
                                                <td class="pl-4 align-middle">
                                                    <div class="d-flex align-items-center">
                                                        <img src="<%= candidate.SeekerAvatar || '/images/default-avatar.png' %>"
                                                            alt="<%= candidate.SeekerName %>"
                                                            class="rounded-circle mr-3 border"
                                                            style="width: 40px; height: 40px; object-fit: cover;">
                                                        <div>
                                                            <h6 class="mb-0 font-weight-bold text-dark"><%= candidate.SeekerName %></h6>
                                                            <small class="text-muted"><%= candidate.SeekerTitle || 'N/A' %></small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="align-middle">
                                                    <span class="text-dark font-weight-bold"><%= candidate.JobTitle %></span>
                                                </td>
                                                <td class="align-middle text-muted">
                                                    <% const _ad = candidate.ApplicationDate ? new Date(candidate.ApplicationDate) : null; %>
                                                    <%= _ad ? _ad.toLocaleDateString('vi-VN') : '' %>
                                                </td>
                                                <td class="align-middle">
                                                    <% 
                                                    let badgeClass='badge badge-pill px-3 py-2 badge-soft-secondary text-secondary';
                                                    if (candidate.ApplicationStatus==='Submitted') badgeClass='badge badge-pill px-3 py-2 badge-soft-info text-info';
                                                    else if (candidate.ApplicationStatus==='UnderReview') badgeClass='badge badge-pill px-3 py-2 badge-soft-warning text-warning';
                                                    else if (candidate.ApplicationStatus==='Interview') badgeClass='badge badge-pill px-3 py-2 badge-soft-primary text-primary';
                                                    else if (candidate.ApplicationStatus==='Offer' || candidate.ApplicationStatus==='Offered') badgeClass='badge badge-pill px-3 py-2 badge-soft-success text-success';
                                                    else if (candidate.ApplicationStatus==='Rejected') badgeClass='badge badge-pill px-3 py-2 badge-soft-danger text-danger';
                                                    %>
                                                    <span class="<%= badgeClass %>" style="font-size: 0.85rem;" id="status-<%= candidate.ApplicationID %>">
                                                        <%= candidate.ApplicationStatus %>
                                                    </span>
                                                    <% if (candidate.ApplicationStatus==='Submitted') { %>
                                                        <span class="badge badge-danger ml-1 shadow-sm animate__animated animate__flash animate__infinite">New</span>
                                                    <% } %>
                                                </td>
                                                <td class="align-middle text-right pr-4">
                                                    <button class="btn btn-sm btn-outline-primary shadow-sm view-candidate-btn"
                                                        data-id="<%= candidate.ApplicationID %>"
                                                        data-status="<%= candidate.ApplicationStatus %>"
                                                        type="button">
                                                        <i class="far fa-eye mr-1"></i> View
                                                    </button>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="text-center py-5">
                                <img src="/images/empty-state.svg" alt="No Candidates" class="mb-4" style="max-width: 200px; opacity: 0.5;">
                                <h4>No candidates yet</h4>
                                <p class="text-muted mb-4">Your job postings haven't received any applications yet.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <%- include('../partials/footer') %>

    <!-- Single dynamic modal for candidate details -->
    <div class="modal fade" id="candidateModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content border-0 shadow-lg rounded-lg">
                <div class="modal-header border-0 pb-0 pt-4 px-4">
                    <h5 class="modal-title font-weight-bold text-dark">Candidate Profile</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body p-4" id="candidateModalBody">
                    <!-- dynamic content -->
                </div>
                <div class="modal-footer border-0 bg-light rounded-bottom p-3">
                    <button type="button" class="btn btn-light font-weight-bold" data-dismiss="modal">Close</button>
                    <button id="saveStatusBtn" type="button" class="btn btn-primary-modern shadow-sm">Save Status</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const modalEl = $('#candidateModal')
            const modalBody = document.getElementById('candidateModalBody')
            let currentAppId = null

            function getBadgeClassForStatus(status) {
                switch (status) {
                    case 'Submitted': return 'badge badge-pill px-3 py-2 badge-soft-info text-info';
                    case 'UnderReview': return 'badge badge-pill px-3 py-2 badge-soft-warning text-warning';
                    case 'Interview': return 'badge badge-pill px-3 py-2 badge-soft-primary text-primary';
                    case 'Offer':
                    case 'Offered': return 'badge badge-pill px-3 py-2 badge-soft-success text-success';
                    case 'Shortlisted': return 'badge badge-pill px-3 py-2 badge-soft-primary text-primary';
                    case 'Rejected': return 'badge badge-pill px-3 py-2 badge-soft-danger text-danger';
                    default: return 'badge badge-pill px-3 py-2 badge-soft-secondary text-secondary';
                }
            }

            function renderApplication(app) {
                const appliedDate = app.ApplicationDate ? new Date(app.ApplicationDate).toLocaleDateString('vi-VN') : ''
                const skillsHtml = (app.SeekerSkills && app.SeekerSkills.length) ? app.SeekerSkills.map(s => `<span class="badge badge-soft-primary px-3 py-2 mr-1 mb-1">${s}</span>`).join('') : '<span class="text-muted small">No skills listed.</span>'
                modalBody.innerHTML = `
                    <div class="row">
                        <div class="col-md-4 text-center border-right">
                            <img src="${app.SeekerAvatar || '/images/default-avatar.png'}" class="rounded-circle shadow-lg mb-3 border-white border" style="width:120px;height:120px;object-fit:cover;">
                            <h4 class="font-weight-bold mb-1 text-dark">${app.SeekerName}</h4>
                            <div class="text-left mt-4 px-2">
                                <p class="mb-2 text-muted small"><i class="fas fa-envelope fa-fw mr-2"></i> ${app.SeekerEmail || ''}</p>
                                <p class="mb-2 text-muted small"><i class="fas fa-phone fa-fw mr-2"></i> ${app.PhoneNumber || 'N/A'}</p>
                                <p class="mb-2 text-muted small"><i class="fas fa-map-marker-alt fa-fw mr-2"></i> ${app.CurrentLocation || 'N/A'}</p>
                            </div>
                            <div class="mt-4">
                                <a id="downloadCvLink" href="${app.CVUrl || '#'}" class="btn btn-outline-dark btn-sm btn-block shadow-sm mb-2" target="_blank"><i class="fas fa-file-download mr-1"></i> Download CV</a>
                            </div>
                        </div>
                        <div class="col-md-8 pl-md-4">
                            <div class="mb-4">
                                <h6 class="font-weight-bold text-uppercase text-muted small mb-2">About Candidate</h6>
                                <p class="text-muted">${app.ProfileSummary || 'No bio provided.'}</p>
                            </div>
                            <div class="mb-4">
                                <h6 class="font-weight-bold text-uppercase text-muted small mb-2">Professional Skills</h6>
                                <div class="d-flex flex-wrap gap-2">${skillsHtml}</div>
                            </div>
                            <hr>
                            <div class="bg-light p-3 rounded-lg mt-3">
                                <h6 class="font-weight-bold text-primary mb-3"><i class="fas fa-briefcase mr-2"></i> Application Details</h6>
                                <div class="row">
                                    <div class="col-md-6 mb-2">
                                        <small class="text-muted d-block">Applied For</small>
                                        <span class="font-weight-bold text-dark">${app.JobTitle || ''}</span>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <small class="text-muted d-block">Applied Date</small>
                                        <span class="font-weight-bold text-dark">${appliedDate}</span>
                                    </div>
                                    <div class="col-md-6">
                                        <small class="text-muted d-block">Current Status</small>
                                        <select id="applicationStatusSelect" class="form-control form-control-sm">
                                            <option value="Submitted">Submitted</option>
                                            <option value="UnderReview">UnderReview</option>
                                            <option value="Shortlisted">Shortlisted</option>
                                            <option value="Interview">Interview</option>
                                            <option value="Offered">Offered</option>
                                            <option value="Rejected">Rejected</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `
                document.getElementById('applicationStatusSelect').value = app.ApplicationStatus || 'Submitted'
            }

            document.querySelectorAll('.view-candidate-btn').forEach(btn => {
                btn.addEventListener('click', async function () {
                    const appId = this.getAttribute('data-id')
                    currentAppId = appId
                    try {
                        const res = await fetch(`/company/applications/${appId}`)
                        if (!res.ok) throw new Error('Failed to load')
                        const data = await res.json()
                        renderApplication(data.application)
                        modalEl.modal('show')
                    } catch (err) {
                        console.error('Error loading application:', err)
                    }
                })
            })

            document.getElementById('saveStatusBtn').addEventListener('click', async function () {
                if (!currentAppId) return
                const select = document.getElementById('applicationStatusSelect')
                const status = select.value
                try {
                    const res = await fetch(`/company/applications/${currentAppId}/status`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ status })
                    })
                    if (!res.ok) throw new Error('Failed to save')
                    const badge = document.getElementById('status-' + currentAppId)
                    if (badge) {
                        badge.innerText = status
                        badge.className = getBadgeClassForStatus(status)
                    }
                    modalEl.modal('hide')
                } catch (err) {
                    console.error('Error saving status:', err)
                }
            })
        })
    </script>
</body>