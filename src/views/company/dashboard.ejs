<%- include('../partials/header', { title: 'Dashboard' }) %>

<body class="dashboard-page">
    <div class="dashboard-wrapper">
        
        <%- include('../partials/dashboard-sidebar', { activePage: 'dashboard' }) %>

        <main class="main-content">
            
            <header class="dashboard-header">
                <h5 class="mb-0 font-weight-bold text-dark">Dashboard</h5>
                
                <div class="d-flex align-items-center">
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-decoration-none text-dark dropdown-toggle" data-toggle="dropdown">
                            <img src="<%= (typeof user !== 'undefined' && user.avatarUrl) ? user.avatarUrl : '/images/default-avatar.png' %>" class="rounded-circle mr-2" width="35" height="35" style="object-fit: cover; border: 1px solid #dee2e6;">
                            <span class="font-weight-bold small mr-1">
                                <%= (typeof user !== 'undefined' && user.email) ? user.email.split('@')[0] : 'User' %>
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right border-0 shadow-lg">
                            <a class="dropdown-item" href="/">Back to Home</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-danger" href="/auth/logout">Logout</a>
                        </div>
                    </div>
                </div>
            </header>

            <div class="p-4">
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="stat-card">
                            <div class="stat-icon blue"><i class="fas fa-briefcase"></i></div>
                            <h3 class="font-weight-bold mb-1">12</h3>
                            <p class="text-muted small mb-0">Active Jobs Posted</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card">
                            <div class="stat-icon green"><i class="fas fa-user-check"></i></div>
                            <h3 class="font-weight-bold mb-1">48</h3>
                            <p class="text-muted small mb-0">New Applications</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card">
                            <div class="stat-icon purple"><i class="fas fa-eye"></i></div>
                            <h3 class="font-weight-bold mb-1">1.2k</h3>
                            <p class="text-muted small mb-0">Total Job Views</p>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="font-weight-bold mb-0">Recent Job Posts</h5>
                    <a href="/company/jobs" class="btn btn-sm btn-link">View All</a>
                </div>

                <div class="custom-table-wrapper">
                    <table class="table custom-table table-hover">
                        <thead>
                            <tr>
                                <th>Job Title</th>
                                <th>Posted Date</th>
                                <th>Applicants</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><strong>Senior React Developer</strong></td>
                                <td>Oct 24, 2025</td>
                                <td>15</td>
                                <td><span class="status-badge status-open">Open</span></td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-light text-primary"><i class="fas fa-edit"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>

    <%- include('../partials/footer') %>